#!/usr/bin/make -f
# See debhelper(7) (uncomment to enable)
# output every command that modifies files on the build system.
export DH_VERBOSE = 1


# see FEATURE AREAS in dpkg-buildflags(1)
#export DEB_BUILD_MAINT_OPTIONS = hardening=+all

# see ENVIRONMENT in dpkg-buildflags(1)
# package maintainers to append CFLAGS
#export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic
# package maintainers to append LDFLAGS
#export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed


%:
	dh $@


# dh_make generated override targets
# This is example for Cmake (See https://bugs.debian.org/641051 )
override_dh_auto_configure: BUILD_REV = $(shell dpkg-parsechangelog -SVersion | cut -d. -f4 | cut -d~ -f1)
override_dh_auto_configure:
	dh_auto_configure --	-DCMAKE_BUILD_TYPE=RelWithDebInfo \
				-DVULKAN_HEADERS_INSTALL_DIR="/usr" \
				-DCMAKE_LIBRARY_PATH=$(DEB_HOST_MULTIARCH) \
				-DGLSLANG_INSTALL_DIR=/usr/bin \
				-DBUILD_TESTS="OFF" \
				-DBUILD_LAYER_SUPPORT_FILES="ON" \
				-DSPIRV_HEADERS_INSTALL_DIR="/usr" \
				-DROBIN_HOOD_HASHING_INSTALL_DIR="/usr/include/robin-hood-hashing" \
				-DANNOTATED_SPEC_LINK="\"https://vulkan.lunarg.com/doc/view/_MAGIC_VERSION_ID_.$(BUILD_REV)/linux/_MAGIC_ANNOTATED_SPEC_TYPE_/vkspec.html\"" ..

override_dh_auto_build:
	dh_auto_build --max-parallel=12
